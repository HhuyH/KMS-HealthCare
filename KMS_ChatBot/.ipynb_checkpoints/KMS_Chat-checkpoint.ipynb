   "source": [
    "from fastapi import FastAPI\n",
    "from pydantic import BaseModel\n",
    "\n",
    "app = FastAPI()\n",
    "\n",
    "class Message(BaseModel):\n",
    "    message: str\n",
    "\n",
    "@app.post(\"/chat\")\n",
    "async def chat(msg: Message):\n",
    "    return {\"reply\": \"Bạn vừa nói: \" + msg.message}\n"
   ]
